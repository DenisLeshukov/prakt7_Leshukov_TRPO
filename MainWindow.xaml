<Window x:Class="prakt7_Leshukov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prakt7_Leshukov" 
        
        mc:Ignorable="d"
        Title="Регистрация пользователя" Height="800" Width="885">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Border BorderThickness="2" BorderBrush="Black" Width="290" HorizontalAlignment="Left">
                    <Grid x:Name="reg" Width="290" Height="250" VerticalAlignment="Top" HorizontalAlignment="Left">


                        <Grid.RowDefinitions>
                            <RowDefinition Height="0"/>
                            <RowDefinition Height="225"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="1" Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="1" Grid.ColumnSpan="2">
                                <Grid >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="145"/>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Row="0" Grid.Column="0" Margin="5">Имя:</Label>
                                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.ColumnSpan="3" Grid.Column="1" Height="20"></TextBox>
                                    <Label Grid.Row="1" Grid.Column="0" Margin="5">Фамилия</Label>
                                    <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.ColumnSpan="3" Height="20" Grid.Column="1"></TextBox>
                                    <Label Grid.Row="2" Grid.Column="0" Margin="5">Отчество:</Label>
                                    <TextBox Text="{Binding MiddleName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="1" Height="20"></TextBox>
                                    <Label Grid.Row="3" Grid.Column="0" Margin="5">Специалитет:</Label>
                                    <TextBox Text="{Binding Specialization, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.ColumnSpan="3" Grid.Column="1" Height="20"></TextBox>
                                    <Label Grid.Row="4" Grid.Column="0" Margin="5">Пароль:</Label>
                                    <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.ColumnSpan="3" Grid.Column="1" Height="20"></TextBox>
                                    <Label Grid.Row="5" Grid.Column="0" Margin="5">Подтвердите пароль:</Label>
                                    <TextBox Text="{Binding Correct_Password, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.ColumnSpan="3" Grid.Column="1" Height="20"></TextBox>
                                </Grid>
                            </Grid>
                        </Grid>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Width="285" HorizontalAlignment="Center">
                            <Button Height="20" Width="120" Margin="30 0 0 5" Click="Reg_User">Зарегистрировать</Button>
                            <Button Click="Reset_Reg" Height="20" Width="90" Margin="10 0 0 5" >Сбросить</Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border BorderThickness="2" BorderBrush="Black" Width="290" Margin="0 10 0 0">
                    <Grid Width="290" HorizontalAlignment="Left" Height="100" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="160"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Margin="5">Индетификатор:</Label>
                        <TextBox x:Name="id" Text="{Binding ID, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Height="25"></TextBox>
                        <Label Grid.Row="1" Grid.Column="0" Margin="5">Пароль:</Label>
                        <TextBox Name="correct" Grid.Row="1" Grid.Column="1" Height="25" Grid.ColumnSpan="2"></TextBox>
                        <Button Click="Sign_in" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Height="25" Width="200">Вход</Button>
                    </Grid>

                </Border>

                <Border BorderThickness="2" BorderBrush="Black" Width="290" Margin="0 10 0 0">
                    <Grid Width="290" HorizontalAlignment="Left" Height="250" x:Name="sign">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="160"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">Индентификатор:</Label>
                        <Label Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding Id}"></Label>
                        <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">Имя:</Label>
                        <Label Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding Name}"></Label>
                        <Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">Фамилия:</Label>
                        <Label Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding LastName}"></Label>
                        <Label Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">Отчество:</Label>
                        <Label Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding MiddleName}"></Label>
                        <Label Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">Специалитет:</Label>
                        <Label Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding Specialization}"></Label>
                        <Label Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">Пароль:</Label>
                        <Label Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding Password}"></Label>
                    </Grid>
                </Border>
            </StackPanel>
            <StackPanel>
                <Border BorderThickness="2" BorderBrush="Black" Width="305">
                    <Grid x:Name="patient_appointment">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border BorderBrush="Black" BorderThickness="2" Width="305" Grid.ColumnSpan="4">
                            <Grid x:Name="find_patient" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="10">Введите ID</Label>
                                <TextBox Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Height="25" Margin="90 0 0 0"></TextBox>
                                <Button Click="find" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Height="25" Margin="200 0 15 0">Найти</Button>

                            </Grid>
                        </Border>

                        <Label Grid.Row="1" Grid.Column="0" Margin="10">Имя:</Label>
                        <Label Content="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Margin="10"></Label>
                        <Label Grid.Row="2" Grid.Column="0" Margin="10">Фамилия:</Label>
                        <Label Content="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Margin="10"></Label>
                        <Label Grid.Row="3" Grid.Column="0" Margin="10">Отчество:</Label>
                        <Label Content="{Binding MiddleName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Margin="10"></Label>
                        <Label Grid.Row="4" Grid.Column="0" Margin="10">Дата рождения:</Label>
                        <Label Content="{Binding Birthday, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Margin="10"></Label>
                        <Label Grid.Row="5" Grid.Column="0" Margin="10">Последний доктор:</Label>
                        <Label Content="{Binding LastDoctor, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Margin="10"></Label>
                        <Label Grid.Row="6" Grid.Column="0" Margin="10">Диагноз:</Label>
                        <TextBox Text="{Binding Diagnos, UpdateSourceTrigger=PropertyChanged}" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" Height="20"></TextBox>
                        <Label Grid.Row="7" Grid.Column="0" Margin="10">Рекомендации:</Label>
                        <TextBox Text="{Binding Recomendation, UpdateSourceTrigger=PropertyChanged}" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3" Height="20"></TextBox>

                        <Label Grid.Row="8" Grid.Column="0" Margin="10">Последний посещение:</Label>
                        <Label Content="{Binding LastAppointment, UpdateSourceTrigger=PropertyChanged}" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="3" Margin="10"></Label>
                        <Button Click="Save_appointment"  Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="4" Height="25" Margin="100 0 100 0">Сохранить</Button>
                    </Grid>
                </Border>
            </StackPanel>
            <StackPanel>
                <Border BorderThickness="2" BorderBrush="Black" Width="290">

                    <Grid x:Name="Register_patient">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Margin="10">Имя:</Label>
                        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Height="20" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                        <Label Grid.Row="1" Grid.Column="0" Margin="10">Фамилия:</Label>
                        <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Height="20" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                        <Label Grid.Row="2" Grid.Column="0" Margin="10">Отчество:</Label>
                        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Height="20" Text="{Binding MiddleName, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                        <Label Grid.Row="3" Grid.Column="0" Margin="10">Дата рождения:</Label>
                        <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Height="20" Text="{Binding Birthday, UpdateSourceTrigger=PropertyChanged}"></TextBox>


                        <Label Grid.Row="5" Grid.Column="0" Margin="10">Диагноз:</Label>
                        <TextBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Height="20" Text="{Binding Diagnos, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                        <Label Grid.Row="6" Grid.Column="0" Margin="10">Рекомендации:</Label>
                        <TextBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Height="20" Text="{Binding Recomendation, UpdateSourceTrigger=PropertyChanged}"></TextBox>



                        <StackPanel Grid.Row="8" Grid.ColumnSpan="4" Orientation="Horizontal" Width="285" HorizontalAlignment="Center">
                            <Button Click="Reg_Patient" Height="20" Width="120" Margin="30 0 0 5" >Зарегистрировать</Button>
                            <Button Click="Reset_Reg" Height="20" Width="90" Margin="10 0 0 5" >Отмена</Button>
                        </StackPanel>
                    </Grid>

                </Border>
                <Border BorderBrush="Black" BorderThickness="2" Height="300">
                    <Grid x:Name="change">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Margin="10">Имя:</Label>
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Height="20"></TextBox>
                        <Label Grid.Row="1" Grid.Column="0" Margin="10">Фамилия:</Label>
                        <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Height="20"></TextBox>
                        <Label Grid.Row="2" Grid.Column="0" Margin="10">Отчество:</Label>
                        <TextBox Text="{Binding MiddleName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Height="20"></TextBox>
                        <Label Grid.Row="3" Grid.Column="0" Margin="10">Дата рождения:</Label>
                        <TextBox Text="{Binding Birthday, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Height="20"></TextBox>
                        <Button Click="Reset" Grid.Row="4" Height="25" Grid.Column="0" Grid.ColumnSpan="4" Margin="50 0 50 0">Сбросить</Button>
                    </Grid>

                </Border>
            </StackPanel>


        </StackPanel>
        <Grid x:Name="counter">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label>Всего Пациентов:</Label>
            <Label Grid.Column="1" Content="{Binding Pacients, UpdateSourceTrigger=PropertyChanged}"></Label>
            <Label Grid.Row="1" Grid.Column="0">Всего Докторов:</Label>
            <Label Grid.Row="1" Grid.Column="1" Content="{Binding Doctors, UpdateSourceTrigger=PropertyChanged}"></Label>
        </Grid>
    </StackPanel>

</Window>
